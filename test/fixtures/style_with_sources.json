[
  {
    "id": "gl-draw-polygon-fill",
    "type": "fill",
    "filter": [
      "all",
      ["==", "$type", "Polygon"]
    ],
    "paint": {
      "fill-color": [
        "case",
        ["==", ["get", "active"], "true"],
        "#fbb03b",
        "#3bb2d0"
      ],
      "fill-opacity": 0.1
    },
    "source": "mapbox-gl-draw"
  },
  {
    "id": "gl-draw-lines",
    "type": "line",
    "filter": [
      "any",
      ["==", "$type", "LineString"],
      ["==", "$type", "Polygon"]
    ],
    "layout": {
      "line-cap": "round",
      "line-join": "round"
    },
    "paint": {
      "line-color": [
        "case",
        ["==", ["get", "active"], "true"],
        "#fbb03b",
        "#3bb2d0"
      ],
      "line-dasharray": [
        "case",
        ["==", ["get", "active"], "true"],
        [0.2, 2],
        [2, 0]
      ],
      "line-width": 2
    },
    "source": "mapbox-gl-draw"
  },
  {
    "id": "gl-draw-point-outer",
    "type": "circle",
    "filter": [
      "all",
      ["==", "$type", "Point"],
      ["==", "meta", "feature"]
    ],
    "paint": {
      "circle-radius": [
        "case",
        ["==", ["get", "active"], "true"],
        7,
        5
      ],
      "circle-color": "#fff"
    },
    "source": "mapbox-gl-draw"
  },
  {
    "id": "gl-draw-point-inner",
    "type": "circle",
    "filter": [
      "all",
      ["==", "$type", "Point"],
      ["==", "meta", "feature"]
    ],
    "paint": {
      "circle-radius": [
        "case",
        ["==", ["get", "active"], "true"],
        5,
        3
      ],
      "circle-color": [
        "case",
        ["==", ["get", "active"], "true"],
        "#fbb03b",
        "#3bb2d0"
      ]
    },
    "source": "mapbox-gl-draw"
  },
  {
    "id": "gl-draw-vertex-outer",
    "type": "circle",
    "filter": [
      "all",
      ["==", "$type", "Point"],
      ["==", "meta", "vertex"],
      ["!=", "mode", "simple_select"]
    ],
    "paint": {
      "circle-radius": [
        "case",
        ["==", ["get", "active"], "true"],
        7,
        5
      ],
      "circle-color": "#fff"
    },
    "source": "mapbox-gl-draw"
  },
  {
    "id": "gl-draw-vertex-inner",
    "type": "circle",
    "filter": [
      "all",
      ["==", "$type", "Point"],
      ["==", "meta", "vertex"],
      ["!=", "mode", "simple_select"]
    ],
    "paint": {
      "circle-radius": [
        "case",
        ["==", ["get", "active"], "true"],
        5,
        3
      ],
      "circle-color": "#fbb03b"
    },
    "source": "mapbox-gl-draw"
  },
  {
    "id": "gl-draw-midpoint",
    "type": "circle",
    "filter": [
      "all",
      ["==", "meta", "midpoint"]
    ],
    "paint": {
      "circle-radius": 3,
      "circle-color": "#fbb03b"
    },
    "source": "mapbox-gl-draw"
  }
]
